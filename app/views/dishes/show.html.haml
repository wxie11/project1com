%p#notice= notice

%article
  %h3= @dish.name
  %p.byline= @dish.restaurant_name
  = @dish.price
  = @dish.cuisine_type
  = image_tag(@dish.image_url)
  %ul.controls
    %li= link_to 'Edit', edit_dish_path(@dish)
    %li= link_to 'Destroy', @dish, method: :delete, data: { confirm: 'Are you sure?' }

%footer
  =link_to 'Back', dishes_path
